<div class="row">
  <div class="col s10 m6 l4 offset-s1 offset-m3 offset-l4">
    <div class="card">
      <div class="card-content"><span class="card-title">Login</span>
        <form id="register-form" class="row">
          <div class="input-field col s10 offset-s1">
            <i class="material-icons prefix">account_circle</i>
            <input id="icon_prefix" name="username" class="username" type="text" required>
            <label for="icon_prefix">Username</label>
          </div>
          <div class="input-field col s10 offset-s1">
            <i class="material-icons prefix">email</i>
            <input id="icon_prefix" name="email" class="email" type="email" required>
            <label for="icon_prefix">Email</label>
          </div>
          <div class="input-field col s10 offset-s1">
            <i class="material-icons prefix">lock</i>
            <input id="icon_prefix" name="password" class="password" type="password" required>
            <label for="icon_prefix">Password</label>
          </div>
          <div class="col s10 offset-s1">
            <button class="btn waves-effect waves-light blue right" type="submit" name="action">Register
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{!-- Script --}}
<script src="/js/register.js"></script>